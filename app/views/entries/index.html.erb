<h1>All Entries</h1>


<br><br>


<div ng-controller="SampleCtrl">

	<form ng-submit="addEntry()">
		<input type="text" ng-model="newEntry.name">
		<input type="submit" value="Add">
	</form>

	<ul infinite-scroll="paging.nextPage()" infinite-scroll-disabled='paging.busy' infinite-scroll-distance="1">
		<li ng-repeat="entry in paging.items">
			{{entry.name}}
			<span ng-show="entry.winner" ng-class="{highlight: entry == lastWinner}" class="winner">Winner</span>
		</li>
		<div ng-show="paging.busy">Loading data...</div>
</ul>

	<button ng-click="drawWinner()">Draw Winner</button>

</div>